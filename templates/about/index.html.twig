{% extends 'base.html.twig' %}

{% block title %}A propos
{% endblock %}

{% block body %}
	{% include "_jumbotron.html.twig" %}


	<div class="container">
		<div class="row page-section">

			{% if about is not null %}
				<div class="col-sm-12 col-lg-6 text-center">
					{% if about.avatar is not null %}
						<img src="{{vich_uploader_asset(about, "avatarFile")}}" alt="" title="" media-simple="true">
					{% else %}
						<img src="{{"/images/avatar.png"}}" alt="" title="" media-simple="true">
					{% endif %}
				</div>
				<div class="col-sm-12 col-lg-6 mt-sm-5">
					<h2 class="display-7 text-center">Parlons un peu de moi</h2>
					<div style="font-size: 2.5rem;">
						{% autoescape  %}
							{{about.content|raw}}
						{% endautoescape %}
					</div>

				</div>
			{% else %}
				<div class="col-sm-12 col-lg-6 text-center">
					<img src="{{"/images/avatar.png"}}" alt="" title="" media-simple="true">
				</div>
				<div class="col-sm-12 col-lg-6 mt-sm-5">
					<h2 class="display-7 text-center">Parlons un peu de moi</h2>
					<div style="font-size: 2.5rem;">
						Un peu de patience, cela ne va pas tarder !
					</div>
				</div>
			{% endif %}
		</div>
	</div>
{% endblock %}
