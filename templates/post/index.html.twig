{% extends 'base.html.twig' %}

{% block title %}Blog passe-temps
{% endblock %}

{% block body %}
	<header class="masthead">
		<div class="container h-100">
			<div class="row h-100 align-items-center justify-content-center text-center">
				<div class="col-lg-10 align-self-end">
					<h1 class="text-uppercase text-white font-weight-bold">Bienvenue sur mon Blog</h1>
					<hr class="divider my-4"/>
				</div>
				<div class="col-lg-8 align-self-baseline">
					<p class="text-white mb-5">Je parlerais ici, de mes passe-temps malgrès ma fibro, c'est eux qui me permette de tenir</p>
				</div>
			</div>
		</div>
	</header>
	<section id="lastPost">
		<div class="container-fluid mt-5">
			<h2 class="text-center mt-0">Mes dernières réalisations</h2>
			<hr class="divider my-4"/>
			<div class="row">
				<ul class="grid cs-style-2">
					{% for post in latestPosts  %}
						<li>
							<figure>
								<img src="{{vich_uploader_asset(post, 'thumbnailFile') | imagine_filter('medium')}}" alt="image-{{post.title}}">
								<figcaption>
									<h3>{{post.title}}</h3>
									<a href="{{path('post.show', {id: post.id, slug: post.slug})}}">Voir l'article</a>
								</figcaption>
							</figure>
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</section>

	<section id="gallery-image">
		<div class="container-fluide">
			<div class="row no-gutters">
				{% for image in images  %}
					<div class="col-lg-4 col-sm-6">
						<a href="#" data-featherlight="#mylightbox-{{image.id}}">
							<img id="#mylightbox-{{image.id}}" src="{{vich_uploader_asset(image, 'imageFile') | imagine_filter('medium')}}" alt="{{image.post.title}}"/>
						</a>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>
{% endblock %}
