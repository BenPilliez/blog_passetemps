{% extends 'base.html.twig' %}

{% block title %}Blog passe-temps
{% endblock %}

{% block body %}
	<div class="site-section bg-light">
		<div class="container">
			<div class="row align-items-stretch retro-layout-2">
				<div class="col-md-4">
					{% for post in latestPosts  %}
						<a href="{{ path('post.show', {slug:post.slug, id: post.id}) }}" class="h-entry mb-30 v-height gradient" style="background-image: url({{ vich_uploader_asset(post, 'thumbnailFile') | imagine_filter('thumb') }});">
							<div class="text">
								<h2>{{post.title}}</h2>
								<span class="date">{{post.createdAt | date("m/d/Y")}}</span>
							</div>
						</a>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
