{% for post in posts  %}

	<div class="col-4 col-sm-6 container_img ">
		<div class="zoom text-center">
			<a href="{{path('post.show', {id: post.id, slug: post.slug})}}">
				<span>
					<i class="fas fa-eye"></i>
				</span>
			</a>
		</div>
		<article class="text-left">
			<h2>{{post.title}}</h2>
			<h4>Categorie:
				{{post.categories.name}}</h4>
		</article>
		<img src="{{vich_uploader_asset(post, 'thumbnailFile') }}" alt="image-{{post.title}}">
	</div>
{% endfor %}
