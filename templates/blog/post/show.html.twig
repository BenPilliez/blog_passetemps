{% extends 'base.html.twig' %}

{% block title %}Post
{% endblock %}

{% block stylesheet %}
	<style>
		header.show {
			padding-top: 10rem;
			background: linear-gradient(to bottom, rgba(92, 77, 66, 0.8) 0%, rgba(92, 77, 66, 0.8) 100%), url("{{vich_uploader_asset(post.categories, 'jumbotronFile')}}");
			padding-bottom: calc(10rem - 4.5rem);
			background-position: center;
			background-repeat: no-repeat;
			background-attachment: scroll;
			background-size: cover;
		}

		header.show h1 {
			font-size: 2.25rem;
		}
		@media(min-width: 992px) {
			header.show {
				height: 100vh;
				min-height: 40rem;
				padding-top: 4.5rem;
				padding-bottom: 0;
			}
			header.show p {
				font-size: 1.15rem;
			}
			header.show h1 {
				font-size: 3rem;
			}
		}
		@media(min-width: 1200px) {
			header.show h1 {
				font-size: 3.5rem;
			}
		}
	</style>
{% endblock %}

{% block body %}
	<header class="show">
		<div class="container h-100">
			<div class="row h-100 align-items-center justify-content-center text-center">
				<div class="col-lg-10 align-self-end">
					<h1 class="text-uppercase text-white font-weight-bold">{{post.title}}</h1>
					<hr class="divider my-4"/>
				</div>
				<div class="col-lg-8 align-self-baseline">
					<p class="text-white mb-5">{{post.createdAt | date ('m/d/Y')}}</p>
				</div>
			</div>
		</div>
	</header>

	<section id="show-content">
		<div class="container ">
			{% for message in app.flashes('success') %}
				<div class="alert alert-success mt-4">
					{{ message }}
				</div>
			{% endfor %}

			{% if not form.vars.valid %}
				<div class="alert alert-danger">
					Erreur
				</div>
			{% endif %}
			<div class="row page-section-4">
				<div class="col-12">
					<div class="col-12" data-slider>
						{% for image in post.images  %}
							<a href="#" data-featherlight="{{vich_uploader_asset(image, 'imageFile')}}" style="background-image: url({{vich_uploader_asset(image, 'imageFile')}});" class="image-show"></a>
						{% endfor %}
					</div>
				</div>
				<div class="col-lg-12-col-md-12 col-sm-12">
					<h2 class="display-3 mb-4">{{post.title}}</h2>
					{% autoescape %}
						{{ post.content|raw }}
					{% endautoescape %}
				</div>
			</div>
		</div>
	</section>

	<section>
		<div class="container">
			<div class="pt-5">
				<h3 class="mb-5">{{post.comment|length}}
					commentaires</h3>
				<ul class="comment-list">
					{% for comment in post.comment  %}
						<li class="comment">
							<div class="comment-body">
								<h3>{{comment.author}}</h3>
								<div class="meta">{{comment.createdAt|date('m/d/Y')}}</div>
								<p>{{comment.content}}</p>
								<p>
									<a href="#" class="reply rounded">Reply</a>
								</p>
							</div>
						</li>
					{% endfor %}
				</ul>
			</div>
			<h3>Laisser moi un petit com'</h3>

