{% extends 'base.html.twig' %}

{% block title %}Post
{% endblock %}

{% block stylesheet %}
	<style>
		header.show {
			padding-top: 10rem;
			background: linear-gradient(to bottom, rgba(92, 77, 66, 0.8) 0%, rgba(92, 77, 66, 0.8) 100%), url("{{vich_uploader_asset(post.categories, 'jumbotronFile')}}");
			padding-bottom: calc(10rem - 4.5rem);
			background-position: center;
			background-repeat: no-repeat;
			background-attachment: scroll;
			background-size: cover;
		}

		header.show h1 {
			font-size: 2.25rem;
		}
		@media(min-width: 992px) {
			header.show {
				height: 100vh;
				min-height: 40rem;
				padding-top: 4.5rem;
				padding-bottom: 0;
			}
			header.show p {
				font-size: 1.15rem;
			}
			header.show h1 {
				font-size: 3rem;
			}
		}
		@media(min-width: 1200px) {
			header.show h1 {
				font-size: 3.5rem;
			}
		}
	</style>
{% endblock %}

{% block body %}
	<header class="show">
		<div class="container h-100">
			<div class="row h-100 align-items-center justify-content-center text-center">
				<div class="col-lg-10 align-self-end">
					<h1 class="text-uppercase text-white font-weight-bold">{{post.title}}</h1>
					<hr class="divider my-4"/>
				</div>
				<div class="col-lg-8 align-self-baseline">
					<p class="text-white mb-5">{{post.createdAt | date ('m/d/Y')}}</p>
				</div>
			</div>
		</div>
	</header>

	<section id="show-content">
		<div class="container ">
			{% for message in app.flashes('success') %}
				<div class="alert alert-success mt-4">
					{{ message }}
				</div>
			{% endfor %}
			<div class="row page-section-4">
				<div class="col-12">
					<div class="col-12" data-slider>
						{% for image in post.images  %}
							<a href="#" data-featherlight="{{vich_uploader_asset(image, 'imageFile')}}" style="background-image: url({{vich_uploader_asset(image, 'imageFile')}});" class="image-show"></a>
						{% endfor %}
					</div>

				</div>

				<div class="col-lg-8-col-md-8 col-sm-12">
					<h2 class="display-3 mb-4 ">{{post.title}}
						<div class="rates d-flex" data-id="{{post.id}}"></div>
					</h2>
					{% autoescape %}
						{{ post.content|raw }}
					{% endautoescape %}

					<p class="text-muted mt-4 font-italic">Cat√©gorie:
						<a class="text-muted" href="{{path('post.index', {id: post.categories.id})}}">
							{{post.categories.name}}
						</a>
						Tags:
						{% for tag in post.tags  %}
							<a class="text-muted" href="{{path('post.tag', {tag_id: tag.id})}}">
								{{tag.name}}
							</a>
						{% endfor %}
					</p>
				</div>
			</div>
		</div>
	</section>

	<section>
		<div class="container">
			<div class="row">
				<div class="col-4">
					<h2>Une petite note ?
						<div class="rating" data-rate-value="0" id=" {{post.id}} "></div>
					</h2>
				</div>
			</div>
			{{ render(controller('App\\Controller\\Blog\\CommentController::commentForm',  {id: post.id, title: "Laisser moi un petit com'", form_id: "new-" ~ post.id, path: "comment.new"}))  }}
			<div class="pt-5 d-flex flex-column comments" data-url="https://localhost:8000/comment/list/{{post.id}}">
				<h3 class="mb-5">{{comments.getTotalItemCount}}
					commentaires</h3>
				<ul class="comment-list">
					{% include "blog/post/_comments.html.twig" with {comments:comments} %}
				</ul>
			</div>

		</div>

		<div class="pagination justify-content-center">
			{{ knp_pagination_render(comments) }}
		</div>
	</div>

</div></section>{% endblock %}
