{% extends 'base.html.twig' %}

{% block title %}Post
{% endblock %}

{% block stylesheet %}
	<style>
		header.show {
			padding-top: 10rem;
			background: linear-gradient(to bottom, rgba(92, 77, 66, 0.8) 0%, rgba(92, 77, 66, 0.8) 100%), url("{{vich_uploader_asset(post.categories, 'jumbotronFile')}}");
			padding-bottom: calc(10rem - 4.5rem);
			background-position: center;
			background-repeat: no-repeat;
			background-attachment: scroll;
			background-size: cover;
		}

		header.show h1 {
			font-size: 2.25rem;
		}
		@media(min-width: 992px) {
			header.show {
				height: 100vh;
				min-height: 40rem;
				padding-top: 4.5rem;
				padding-bottom: 0;
			}
			header.show p {
				font-size: 1.15rem;
			}
			header.show h1 {
				font-size: 3rem;
			}
		}
		@media(min-width: 1200px) {
			header.show h1 {
				font-size: 3.5rem;
			}
		}
	</style>
{% endblock %}

{% block body %}
	<header class="show">
		<div class="container h-100">
			<div class="row h-100 align-items-center justify-content-center text-center">
				<div class="col-lg-10 align-self-end">
					<h1 class="text-uppercase text-white font-weight-bold">{{post.title}}</h1>
					<hr class="divider my-4"/>
				</div>
				<div class="col-lg-8 align-self-baseline">
					<p class="text-white mb-5">{{post.createdAt | date ('m/d/Y')}}</p>
				</div>
			</div>
		</div>
	</header>

	<div class="container">
		{% autoescape %}
			{{ post.content|raw }}
		{% endautoescape %}
	</div>
{% endblock %}
