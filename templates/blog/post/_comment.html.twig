<div class="col-12">

	{% if title %}
		<h3>{{title}}</h3>

	{% endif %}

	{{ form_start(form, {action: path(path, {id: id}), attr: {class: hidden, id:form_id } }) }}
	<div class="form-group">
		{{form_row(form.author)}}
	</div>
	<div class="form-group">
		{{form_row(form.email)}}
	</div>
	<div class="form-group">
		{{form_row(form.content)}}
	</div>
	<div class="form-group">
		{{form_row(form.submit)}}
	</div>
	{{form_end(form)}}
</div>
